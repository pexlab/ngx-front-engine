{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": ["offscreencanvas"],
        "lib": [
            "dom",
            "es2020",
            "esnext.bigint"
        ],
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "**/*.spec.ts"
    ]
}
